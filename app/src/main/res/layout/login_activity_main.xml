<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:src="@mipmap/logo"/>

        <LinearLayout
            android:id="@+id/login_msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@mipmap/xiekuang">

            <RelativeLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/dengluzhuceanniu"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/dengluzhuceanniu"/>

                <TextView
                    android:gravity="center"
                    android:layout_toLeftOf="@+id/dengluzhuceanniu"
                    android:layout_alignParentRight="true"
                    android:id="@+id/register_btn"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="15dp"
                    android:text="注册账号"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"/>

            </RelativeLayout>


            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/transparent_background_button"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">
                <!--<TextView-->
                <!--android:id="@+id/login_username"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textStyle="bold"-->
                <!--android:text=""-->
                <!--android:textSize="18sp"-->
                <!--android:textColor="@color/gray_black" />-->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/maleuser"
                    android:scaleType="fitXY"/>

                <EditText
                    android:id="@+id/login_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:inputType="number"
                    android:digits="1234567890"
                    android:hint="手机号"
                    android:textColorHint="@color/province_line_border"
                    android:lines="1"
                    android:maxLength="20"
                    android:textSize="14sp"
                    android:textColor="@color/gray_black"
                    android:minHeight="45dp"
                    android:text=""
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:id="@+id/username_xx"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="8dp"
                    android:src="@mipmap/icon_input_clear"
                    android:visibility="invisible"/>
            </LinearLayout>

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/transparent_background_button"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <!--<TextView-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textStyle="bold"-->
                <!--android:text=""-->
                <!--android:textSize="18sp"-->
                <!--android:textColor="@color/gray_black" />-->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/mima"
                    android:scaleType="fitXY"/>

                <EditText
                    android:id="@+id/login_pwd"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:textColorHint="@color/province_line_border"
                    android:hint="密  码"
                    android:lines="1"
                    android:maxLength="20"
                    android:textSize="14sp"
                    android:textColor="@color/gray_black"
                    android:minHeight="45dp"
                    android:text=""
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:id="@+id/pwd_xx"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="8dp"
                    android:src="@mipmap/icon_input_clear"
                    android:visibility="invisible"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/forget_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/gray_text_light"
                    android:text="忘记密码?"
                    android:textAlignment="center"/>
            </LinearLayout>

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/transparent_background_button"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/lay1"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <!--<TextView-->
            <!--android:id="@+id/register_btn"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="48dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:text="注册账号"-->
            <!--android:textSize="16sp"-->
            <!--android:textColor="@color/gray_text_light"-->
            <!--android:textAlignment="center"/>-->

            <!--<TextView-->
            <!--android:id="@+id/forget_pwd"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="48dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:textSize="16sp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:textColor="@color/gray_text_light"-->
            <!--android:text="忘记密码?"-->
            <!--android:textAlignment="center"/>-->
        </RelativeLayout>

        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/login_btn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="-60dp"
            android:layout_below="@id/login_msg"
            android:text="登录"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:background="@drawable/radius_layout_orange_bg" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/gray_text_light"
                android:textSize="12sp"
                android:text="第三方登录"/>

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/zhishijiantou"/>

            <ImageView
                android:id="@+id/wechat_login_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@mipmap/weixin"
                android:scaleType="fitXY"/>
        </LinearLayout>


    </LinearLayout>

</ScrollView>
