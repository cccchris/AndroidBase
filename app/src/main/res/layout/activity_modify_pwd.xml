<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/transparent_background_button"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="原始密码:"
            android:textSize="18sp"
            android:textColor="@color/gray_black" />
        <EditText
            android:id="@+id/old_pwd"
            android:layout_width="200dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="numberPassword"
            android:digits="1234567890"
            android:hint="6位数字"
            android:textColorHint="@color/province_line_border"
            android:lines="1"
            android:maxLength="6"
            android:textSize="18sp"
            android:textColor="@color/gray_black"
            android:minHeight="45dp" />
        <ImageView
            android:id="@+id/pwd_xx"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="8dp"
            android:src="@mipmap/icon_input_clear"
            android:visibility="invisible"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/transparent_background_button"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="新的密码:"
            android:textSize="18sp"
            android:textColor="@color/gray_black" />
        <EditText
            android:id="@+id/nwe_pwd"
            android:layout_width="200dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="numberPassword"
            android:digits="1234567890"
            android:hint="6位数字"
            android:textColorHint="@color/province_line_border"
            android:lines="1"
            android:maxLength="6"
            android:textSize="18sp"
            android:textColor="@color/gray_black"
            android:minHeight="45dp" />
        <ImageView
            android:id="@+id/pwd_xx2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="8dp"
            android:src="@mipmap/icon_input_clear"
            android:visibility="invisible"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/transparent_background_button"/>


    <Button
        android:id="@+id/login_btn"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/login_msg"
        android:text="修改"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/radius_layout_orange_btn" />

</LinearLayout>