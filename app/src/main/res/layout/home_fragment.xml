<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:banner="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--banner轮播图-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">
                <cn.tthud.taitian.widget.banner.SimpleImageBanner
                    android:id="@+id/sib_simple_usage"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    banner:bb_scale="0.5" />

            </LinearLayout>

            <!--广告-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/linearlayout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="40dp">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这是一条广告广告广告哈哈哈"/>

            </LinearLayout>

            <!--公司图标-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:id="@+id/ll_company_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:src="@mipmap/icon_default"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_company_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:src="@mipmap/icon_default"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_company_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:src="@mipmap/icon_default"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_company_four"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:src="@mipmap/icon_default"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <!--经典案例&查看更多-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:text="经典案例"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:text="查看更多"/>

                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="@drawable/linearlayout"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/iv_case_img1"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_default"
                    android:layout_width="65dp"
                    android:layout_height="65dp" />

                <LinearLayout
                    android:layout_alignTop="@+id/iv_case_img1"
                    android:layout_alignBottom="@+id/iv_case_img1"
                    android:layout_toRightOf="@+id/iv_case_img1"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_case_title1"
                        android:text="火星情报局第11期"
                        android:textSize="17dp"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_case_subtitle1"
                        android:layout_alignLeft="@+id/tv_case_title"
                        android:layout_alignBottom="@+id/tv_case_title"
                        android:layout_marginTop="8dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="火星情报局第11期详细介绍哈哈哈火星情报局第11期详细介绍哈哈哈火星情报局第11期详细介绍哈哈哈火星情报局第11期详细介绍哈哈哈火星情报局第11期详细介绍哈哈哈"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="@drawable/linearlayout"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/iv_case_img2"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_default"
                    android:layout_width="65dp"
                    android:layout_height="65dp" />

                <LinearLayout
                    android:layout_alignTop="@+id/iv_case_img2"
                    android:layout_alignBottom="@+id/iv_case_img2"
                    android:layout_toRightOf="@+id/iv_case_img2"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_case_title2"
                        android:text="火星情报局第11期"
                        android:textSize="17dp"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_case_subtitle2"
                        android:layout_alignLeft="@+id/tv_case_title2"
                        android:layout_alignBottom="@+id/tv_case_title2"
                        android:layout_marginTop="8dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="火星情报局第11期详细介绍哈哈哈火星情报局第11期详细介绍哈哈哈火星情报局第11期详细介绍哈哈哈火星情报局第11期详细介绍哈哈哈火星情报局第11期详细介绍哈哈哈"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:padding="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <ImageView
                    android:background="@color/text_gray1"
                    android:layout_width="40dp"
                    android:layout_height="1dp" />
                
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_gray1"
                    android:text="别扯，到底啦"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:background="@color/text_gray1"
                    android:layout_width="40dp"
                    android:layout_height="1dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>