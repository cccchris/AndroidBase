<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/headpic"
                android:layout_width="91dp"
                android:layout_height="91dp"
                android:src="@mipmap/head_default"
                android:scaleType="fitXY"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/upload_headpic"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:src="@mipmap/shangchuantouxiang"
                android:layout_alignBottom="@+id/headpic"
                android:layout_alignRight="@id/headpic"/>
        </RelativeLayout>

        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line" />

            <!--昵称-->
            <RelativeLayout
                android:id="@+id/nick_name_layout"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/white" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:text="昵        称"
                    android:textColor="@color/gray_black_text"  />
                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:includeFontPadding="false"
                    android:background="@null"
                    android:maxLength="15"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/gray_black_text"
                    android:gravity="end"
                    android:textSize="14sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line" />

            <RelativeLayout
                android:id="@+id/name_layout"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/white" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:text="真实姓名"
                    android:textColor="@color/gray_black_text"  />
                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:includeFontPadding="false"
                    android:background="@null"
                    android:maxLength="15"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/gray_black_text"
                    android:gravity="end"
                    android:textSize="14sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line" />
            <!--身份证号码-->
            <RelativeLayout
                android:id="@+id/et_number_card_layout"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/white" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:text="身份证号"
                    android:textColor="@color/gray_black_text"  />
                <EditText
                    android:id="@+id/et_number_card"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:includeFontPadding="false"
                    android:background="@null"
                    android:maxLength="15"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/gray_black_text"
                    android:gravity="end"
                    android:textSize="14sp" />
            </RelativeLayout>
            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="60dp"-->
                <!--android:layout_marginLeft="15dp"-->
                <!--android:layout_marginRight="15dp"-->
