<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.text.TextUtils" />
        <variable
            name="resultsBean"
            type="cn.tthud.taitian.bean.UserBean" />
    </data>

    <LinearLayout
        android:id="@+id/ll_all"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="49dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <LinearLayout
                android:paddingLeft="10dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_title"
                        android:text="完成任务"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextG4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_sub_title"
                        android:layout_marginLeft="5dp"
                        android:background="@color/yellow_60"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="任务奖励"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_time"
                    android:text="2017-11-12 09:00"
                    android:textSize="12sp"
                    android:textColor="@color/colorTextG2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="2"
                android:gravity="right|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_score"
                    android:paddingRight="10dp"
                    android:text="+1"
                    android:textColor="@color/yellow_60"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/transparent_background_button"/>

    </LinearLayout>



</layout>