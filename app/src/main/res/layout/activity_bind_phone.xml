<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/content_bg"
    tools:context="cn.tthud.taitian.activity.mine.BindPhoneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/imv_advatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/login_msg"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/transparent_background_button"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="手机号码:"
                android:textSize="18sp"
                android:textColor="@color/gray_black" />
            <EditText
                android:id="@+id/login_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="number"
                android:digits="1234567890"
                android:hint="请输入手机号码"
                android:textColorHint="@color/province_line_border"
                android:lines="1"
                android:maxLength="20"
                android:textSize="18sp"
                android:textColor="@color/gray_black"
                android:minHeight="45dp"
                android:text="" />
            <ImageView
                android:id="@+id/username_xx"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="8dp"
                android:src="@mipmap/icon_input_clear"
                android:visibility="invisible"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/transparent_background_button"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="短信验证码:"
                android:textSize="18sp"
                android:textColor="@color/gray_black" />
            <EditText
                android:id="@+id/code"
                android:layout_width="100dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="number"
                android:digits="1234567890"
                android:hint="请输入验证码"
                android:textColorHint="@color/province_line_border"
                android:lines="1"
                android:maxLength="16"
                android:textSize="18sp"
                android:textColor="@color/gray_black"
                android:minHeight="45dp" />
            <TextView
                android:id="@+id/login_send_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:padding="10dp"
                android:background="@drawable/radius_layout_blue_btn"
                android:text="获取验证码"
                android:textSize="18sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/transparent_background_button"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="密码:"
                android:textSize="18sp"
                android:textColor="@color/gray_black" />
            <EditText
                android:id="@+id/login_pwd"
                android:layout_width="200dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="textPassword"
                android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="请输入登录密码"
                android:textColorHint="@color/province_line_border"
                android:lines="1"
                android:maxLength="16"
                android:textSize="18sp"
                android:textColor="@color/gray_black"
                android:minHeight="45dp" />
            <ImageView
                android:id="@+id/pwd_xx"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="8dp"
                android:src="@mipmap/icon_input_clear"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/login_msg"
        android:text="提交"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:background="@drawable/radius_layout_blue_btn" />


</LinearLayout>
