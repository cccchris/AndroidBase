<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="手机号码:"
            android:textSize="15sp"
            android:textColor="@color/gray_black" />
        <EditText
            android:id="@+id/login_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="number"
            android:digits="1234567890"
            android:hint="请输入手机号码"
            android:textColorHint="@color/province_line_border"
            android:lines="1"
            android:maxLength="20"
            android:textSize="14sp"
            android:textColor="@color/gray_black"
            android:minHeight="45dp"
            android:text="" />
        <ImageView
            android:id="@+id/username_xx"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="8dp"
            android:src="@mipmap/icon_input_clear"
            android:visibility="invisible"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="密码:"
            android:textSize="15sp"
            android:textColor="@color/gray_black" />
        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="200dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="textPassword"
            android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="请输入登录密码"
            android:textColorHint="@color/province_line_border"
            android:lines="1"
            android:maxLength="16"
            android:textSize="14sp"
            android:textColor="@color/gray_black"
            android:minHeight="45dp" />
        <ImageView
            android:id="@+id/pwd_xx"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="8dp"
            android:src="@mipmap/icon_input_clear"
            android:visibility="invisible"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="验证码:"
            android:textSize="15sp"
            android:textColor="@color/gray_black" />
        <EditText
            android:id="@+id/code"
            android:layout_width="200dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="number"
            android:digits="1234567890"
            android:hint="6位数字"
            android:textColorHint="@color/province_line_border"
            android:lines="1"
            android:maxLength="6"
            android:textSize="14sp"
            android:textColor="@color/gray_black"
            android:minHeight="45dp" />

        <TextView
            android:id="@+id/login_send_code"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:text="发送验证码"
            android:textAlignment="center"
            android:background="@color/colorSendName8"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:text="修改"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/radius_layout_orange_btn" />

</LinearLayout>